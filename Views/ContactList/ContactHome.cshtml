<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>contact-home</title>
  </head>
  <body>
    <h1>Address Book</h1>
      <ul>
        @foreach(var contact in Model)
        {
          <li>
              <h3 class= "contactText"> @contact.GetName() </h3>
              <h3 class="contactText"> @contact.GetPhoneNumber()</h3>
              <h3 class="contactText"> @contact.GetAddress()</h3>
          </li>
        }
      </ul>
      <p><a href="/contacts/form"> Add new contact!</p>
      <form action="/contacts/delete" method="post">
        <button type="submit" name="button">Clear All Contacts</button>
      </form>
  </body>
</html>
